{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<div class="custom-section">
  <img src="{{ section.settings.image | image_url: width: 600 }}" alt="Section Image" width="500" loading="lazy">

  <h2>{{ section.settings.headline }}</h2>

  <div class="rich-text">
    {{ section.settings.richtext | richtext }}
  </div>

  {% if section.settings.show_symbol %}
    <!-- Symbol input here -->
    <p>Show Symbol input is enabled</p>
  {% else %}
    <!-- Symbol input is disabled -->
    <p>Show Symbol input is disabled</p>
  {% endif %}

  <div class="headline-style">
    <h3>
      {% if section.settings.headline_style == 'style_1' %}
        Style 1 Headline
      {% else %}
        Style 2 Headline
      {% endif %}
    </h3>
  </div>

  <div class="orientation">
    <h4>Orientation:</h4>
    <p>
      {% if section.settings.orientation == 'left_to_right' %}
        Left to Right
      {% else %}
        Right to Left
      {% endif %}
    </p>
  </div>
</div>

{% schema %}
{
  "name": "Image With Text",
  "settings": [
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image",
      "info": "Select an image for the section."
    },
    {
      "type": "text",
      "label": "Headline",
      "id": "headline",
      "default": "Your Headline",
      "info": "Enter a headline for the section."
    },
    {
      "type": "richtext",
      "label": "Rich Text",
      "id": "richtext",
      "default": "<p>Your rich text content here.</p>",
      "info": "Enter rich text content for the section."
    },
    {
      "type": "checkbox",
      "label": "Show Symbol",
      "id": "show_symbol",
      "default": true,
      "info": "Toggle to show/hide the symbol input."
    },
    {
      "type": "select",
      "label": "Headline Style",
      "id": "headline_style",
      "options": [
        {
          "value": "style_1",
          "label": "Style 1"
        },
        {
          "value": "style_2",
          "label": "Style 2"
        }
      ],
      "default": "style_1",
      "info": "Select the headline style for the section."
    },
    {
      "type": "select",
      "label": "Orientation",
      "id": "orientation",
      "options": [
        {
          "value": "left_to_right",
          "label": "Left to Right"
        },
        {
          "value": "right_to_left",
          "label": "Right to Left"
        }
      ],
      "default": "left_to_right",
      "info": "Select the orientation for the section."
    }
  ],
  "presets": [
    {
      "name": "Image With Text",
      "category": "section"
    }
  ]
}
{% endschema %}
