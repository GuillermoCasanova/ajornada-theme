<!-- Loop through and display blocks -->
<section class="dynamic-collection-grid">
  <div class="dynamic-collection-grid-grid__inner">
    <div class="product-grid-container page-width">
      <ul class="block-section  grid product-grid dynamic-product-grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'product' %}
              <li class="grid__item dynamic-product-grid__product">
                {% render 'product-card',
                  heading_level: 'h3',
                  card_product: block.settings.product,
                  section_id: section.id,
                  product_collection: collection
                %}
              </li>
            {% when 'video_embed' %}
              <li class="grid__item  dynamic-product-grid__video">
                {{ block.settings.video.video_source.url }}
                <div class="video-card"><video src="{{ block.settings.video.video_source.url }}"></video></div>
              </li>
            {% when 'image' %}
              <li class="grid_item  dynamic-product-grid__image">
                <div class="image-card {% if block.settings.art_direction == 'portrait' %} image-card--portrait{% endif %}">
                  <div class="image-card__inner">
                    <div class="media">
                      <img
                        srcset="
                          {%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                          {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                          {%- if block.settings.image.width >= 533 -%}{{ block.settings.image | image_url: width: 533 }} 533w,{%- endif -%}
                          {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | image_url: width: 720 }} 720w,{%- endif -%}
                          {%- if block.settings.image.width >= 800 -%}{{ block.settings.image | image_url: width: 800 }} 800w,{%- endif -%}
                          {%- if block.settings.image.width >= 940 -%}{{ block.settings.image | image_url: width: 940 }} 940w,{%- endif -%}
                          {%- if block.settings.image.width >= 1066 -%}{{ block.settings.image | image_url: width: 1066 }} 1066w,{%- endif -%}
                          {{ block.settings.image | image_url }} {{ block.settings.image.width }}
                        "
                        src="{{ block.settings.image | image_url: width: 533 }}"
                        sizes="(min-width: 700px) 50vw, 90vw"
                        alt="{{ block.settings.image.alt | escape }}"
                        class="motion-reduce  responsive-image"
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}"
                      >
                    </div>
                  </div>
                </div>
              </li>
          {% endcase %}
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Dynamic Collection Grid",
  "settings": [],
  "blocks": [
    {
      "name": "Product",
      "type": "product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    },
    {
      "name": "Video Embed",
      "type": "video_embed",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "A Shopify-hosted video"
        }
      ]
    },
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image or GIF"
        },
        {
          "type": "radio",
          "id": "art_direction",
          "label": "Image Art Direction",
          "options": [
            {
              "value": "portrait",
              "label": "Portrait"
            },
            {
              "value": "wide",
              "label": "Wide"
            }
          ],
          "default": "portrait"
        }
      ]
    }
  ]
}
{% endschema %}
