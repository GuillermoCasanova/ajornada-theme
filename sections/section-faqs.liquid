<!-- FAQs Section -->
<section class="faq-section">
  <div class="faq-section__inner page-width">
    <h2 class="faq-section__heading">{{ section.settings.name }}</h2>

    {% for block in section.blocks %}
      <details class="faq-item">
        <summary class="faq-item__question">{{ block.settings.question }}</summary>
        <div class="faq-item__answer">
          {{ block.settings.answer }}
        </div>
      </details>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "faq_block",
      "name": "FAQ Block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section"
    }
  ]
}
{% endschema %}
